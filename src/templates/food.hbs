{{#each this}}

<li class="menu__item">
  <div class="card">
    <img
      src= {{image}}
      alt={{name}}
      class="card__image"
    />
    <div class="card__content">
      <h2 class="card__name">{{name}}</h2>
      <p class="card__price">
        <i class="material-icons"> monetization_on </i>
        {{price}} кредитів
      </p>

      <p class="card__descr">
       {{description}}
      </p>
{{#each ingredients}}
      <ul class="tag-list">
       <li class="tag-list__item">{{this}}</li>
      </ul>
      {{/each}}
    </div>

    <button class="card__button button">
      <i class="material-icons button__icon"> shopping_cart </i>
      В корзину
    </button>
  </div>
</li>
  {{/each}}